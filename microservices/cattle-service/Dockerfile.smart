FROM alpine:latest

RUN apk add --no-cache nodejs npm

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy all source code
COPY . .

# Build if TypeScript project and has build script
RUN if [ -f "tsconfig.json" ] && grep -q '"build"' package.json; then npm run build; fi

# Expose port
EXPOSE 3004

# Use the start script from package.json
CMD ["npm", "start"]
