{
  "name": "cattle-management-system",
  "version": "1.0.0",
  "description": "肉牛全生命周期管理系统 - 微服务架构",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:miniprogram": "cd miniprogram && npm run dev:mp-weixin",
    "dev:microservices": "cd microservices && .\\start-services-npm.ps1",
    "stop:microservices": "cd microservices && .\\stop-services.ps1",
    "build:frontend": "cd frontend && npm run build",
    "build:miniprogram": "cd miniprogram && npm run build:mp-weixin",
    "lint:frontend": "cd frontend && npm run lint",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "clean:all": "npm run clean:frontend && rm -rf node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}