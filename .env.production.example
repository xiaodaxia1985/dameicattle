# 生产环境配置示例
# 复制此文件为 .env.production 并修改相应配置

# 应用环境
NODE_ENV=production

# 数据库配置
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_REPLICATION_PASSWORD=your_secure_replication_password_here

# JWT密钥 (请使用强密码)
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters

# Redis配置 (如果需要密码)
# REDIS_PASSWORD=your_redis_password

# Grafana管理员密码
GRAFANA_PASSWORD=your_secure_grafana_password

# 域名配置
DOMAIN=cattle-management.com

# SSL证书类型 (self-signed 或 letsencrypt)
SSL_TYPE=letsencrypt

# 邮箱配置 (用于SSL证书申请)
SSL_EMAIL=admin@cattle-management.com

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# CDN配置 (阿里云OSS示例)
CDN_ENABLED=true
CDN_DOMAIN=cdn.cattle-management.com
OSS_REGION=oss-cn-beijing
OSS_BUCKET=cattle-management-static
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret

# 监控配置
PROMETHEUS_RETENTION=15d
GRAFANA_INSTALL_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel

# 日志配置
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=100m

# 性能配置
MAX_CONNECTIONS=200
WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=4096

# 安全配置
RATE_LIMIT_API=10r/s
RATE_LIMIT_LOGIN=1r/s
MAX_BODY_SIZE=100M

# 缓存配置
REDIS_CACHE_TTL=3600
API_CACHE_TTL=300
STATIC_CACHE_TTL=86400